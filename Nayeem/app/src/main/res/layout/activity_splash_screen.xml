<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@drawable/select_background_gradint"
    android:orientation="vertical"
    tools:context=".Welcome.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/splash_imageview"
            android:layout_width="200sp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginStart="100sp"
            android:src="@drawable/mainlogo"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight=".1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight=".9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/machowdemoyjoq"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/giette"
            android:gravity="center_horizontal"
            android:text="Take your products"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>