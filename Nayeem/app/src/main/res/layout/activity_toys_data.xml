<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanel.ToysData"
    android:orientation="vertical">

    <include
        android:id="@+id/include_toys_toolbar"
        layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/appcolor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Toy's Product"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Toy's Product Image"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="5sp"
            android:textColor="@color/colorRed"/>

        <ImageView
            android:id="@+id/upload_product_image_4"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:src="@drawable/ic_baseline_image"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/upload_product_id_4"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products id"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/upload_product_name_4"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products name"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/upload_product_prize_4"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:hint="products prize"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/upload_product_size_4"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:paddingStart="2sp"
            android:paddingEnd="0sp"
            android:hint="products size"
            android:maxLines="1"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/upload_product_description_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="2sp"
                android:paddingEnd="0sp"
                android:hint="products description max 200 char"
                android:maxLines="1"
                android:singleLine="true"/>

        </LinearLayout>

        <Button
            android:id="@+id/upload_toys_data"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@drawable/select_background_gradint"
            android:text="upload"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>