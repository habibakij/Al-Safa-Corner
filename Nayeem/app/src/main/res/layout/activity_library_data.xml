<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AdminPanel.LibraryData">

    <include
        android:id="@+id/include_library_toolbar"
        layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/appcolor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_library_main_text"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_library_image"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="5sp"
            android:textColor="@color/colorRed"/>

        <ImageView
            android:id="@+id/upload_product_image_2"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_image" />

        <EditText
            android:id="@+id/upload_product_id_2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products id"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="2sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/upload_product_name_2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products name"
            android:maxLines="1"
            android:paddingStart="2sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/upload_product_prize_2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products prize"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="2sp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/upload_product_size_2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:hint="products size"
            android:maxLines="1"
            android:paddingStart="2sp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/upload_product_description_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="products description max 200 char"
                android:maxLines="1"
                android:paddingStart="2sp"
                android:singleLine="true" />

        </LinearLayout>

        <Button
            android:id="@+id/upload_library_data"
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@drawable/select_background_gradint"
            android:text="upload"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>